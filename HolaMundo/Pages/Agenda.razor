@page "/agenda"
@inject NavigationManager NavigationManager

<style>
    body{
        background-color: #f8f9fa;
    }

    .contenedor-borde{
        border-radius: 10px;
        background-color: white;
    }

    .category{
        background-color: white;
        box-shadow: 0px 0px 6px rgba(0, 0, 0, 0.1);
    }

    .logo-vc{
        height: 50px;
        margin: 10px 0;
    }

    .bg-primary{
        background-color: #003366 !important;
        color: white;
        text-align: center;
        font-weight: bold;
        padding: 15px;
        border-radius: 10px;
    }

    .bg-success{
        background-color: #336633 !important;
        color: white;
        text-align: center;
        font-weight: bold;
        padding: 15px;
        border-radius: 10px;
    }

    .btn-custom{
        background-color: #1976D2;
        color: white;
        border-radius: 12px;
        padding: 12px;
        font-weight: bold;
        width: 100%;
        text-align: center;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s, transform 0.2s;
        margin: 5px 0;
    }

    .btn-custom:hover{
        background-color: #005bb5;
        transform: scale(1.05);
    }

    .footer-principal{
        background-color: #336633 !important;
        color: white;
        text-align: center;
        font-weight: bold;
        border-radius: 10px;
    }

    .grid{
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
        gap: 10px;
    }

    @@media (max-width:786px){
        .btn-custom{
            font-size: 0.9rem;
            padding: 10px;
        }
    }

</style>

<div class="container">
    <div class="contenedor-borde">
        <div class="category">
            <div class="text-center bg-primary">
                <img class="logo-vc" src="/logoVC.png" alt="logo" />
                <h2>Agenda Blazor</h2>
            </div>
            <div class="grid p-4">
                <button class="btn-custom">Contraseñas</button>
                <button class="btn-custom">Calendario</button>
                <button class="btn-custom">Pagos</button>
                <button class="btn-custom">Drive</button>
                <button class="btn-custom">PWA</button>
                <button class="btn-custom">Deepbrain</button>
            </div>
        </div>
        

        <div class="category">
            <div class="bg-success">
                <h4>Herramientas IA</h4>
            </div>
            <div class="grid p-4">
                <button class="btn-custom">ChatGPT</button>
                <button class="btn-custom">Gemini</button>
                <button class="btn-custom">Google Cloud</button>
                <button class="btn-custom">Grok</button>
                <button class="btn-custom">Dola</button>
                <button class="btn-custom">Notebook LM</button>
            </div>
        </div>
        

        <div class="category">
            <div class="bg-primary">
                <h4>Herramientas Crypto</h4>
            </div>
            <div class="grid p-4">
                <button class="btn-custom">Binance</button>
                <button class="btn-custom">Metamask</button>
                <button class="btn-custom">Etherscan</button>
                <button class="btn-custom">BSC</button>
                <button class="btn-custom">Remix-NFT</button>
                <button class="btn-custom">Solidity</button>
            </div>
        </div>
        

        <div class="footer-principal text-center">
            <a class="text-white" href="mailto:contacto@vicercom.cl">contacto@vicercom.cl</a>
            <div class="bg-primary"></div>
        </div>
    </div>
</div>


@code{
    private void OpenLink(string url) => NavigationManager.NavigateTo(url, true);

    private void OpenContraseñas() => OpenLink("https://drive.google.com");
}